{
  "extends": "./tsconfig.json",
   "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@auth/*": ["./src/features/auth/*"],
      "@shared/*": ["./src/shared-libs/*"],
      "@shared/constant": ["./src/shared-libs/constant/common.ts"],
      "@shared/logger": ["./src/shared-libs/logger/index.ts"],
      "@shared/middleware": ["./src/shared-libs/middlewares/*"],
      "@shared/exceptions": ["./src/shared-libs/exception-filter/*"],
      "@shared/utils": ["./src/shared-libs/utilities/*"],
      "@database/interfaces": ["./src/database/interfaces/*"],
      "@database/repositories": ["./src/database/repositories/*"],
      "@app/config": ["./src/config/*"],
      "@schemas": ["./src/schemas/*"],
      "@repositories": ["./src/repositories/*"],
      "@app/config/*": ["./src/config/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@database/*": ["./src/database/*"],
      "@root/*": ["./src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
